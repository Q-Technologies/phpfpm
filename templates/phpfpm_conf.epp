#
# File Managed by Puppet
#
[global]
pid = /var/run/php-fpm.pid
error_log = /var/log/nginx/php-fpm.log

[www]
user = nobody
group = nobody
listen = /var/sockets/php_fpm.sock
listen.mode = 0666

pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3

env[HOSTNAME] = $HOSTNAME
env[PATH] = /usr/bin:/bin
env[TMP] = /tmp
env[TMPDIR] = /tmp
env[TEMP] = /tmp

include=<%= $phpfpm_pool_dir %>/*.conf

